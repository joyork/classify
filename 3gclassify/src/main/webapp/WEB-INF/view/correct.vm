	<script>
	$(document).ready(function(){
	  $('#target').tooltip({
    	animation: true,
    	placement: "top",
    	title: "请标注",
	    trigger: "manual",
    	delay: { show: 0, hide: 100 }
      });
	  $('#target').tooltip('show');
	});

	function hideWarning(){
		$('.alert').hide();
	}
	function changeTarget(){
		$('#target').tooltip('hide');
	}
	function clearContent(){
		$('#content').val('');
	}

	$('#myModal').on('show', function (e) {
		$('#submitBtn').tooltip('hide');
		var content = $("#content").val();
		var target = $("#target").val();
		
		if(content.trim()=='' || target==''){
			$('.alert').show();
			return e.preventDefault();
		}else{
			jQuery.ajax({
				type : "POST",
				async : false,
				url : "/3gclassify/manual",
				data : {
					content:content,
					target:target
				},
				dataType : 'json',
				beforeSend : function() {
				},
				success : function(data) {

					if(data.success=="true")
					{
					}
					else
					{
						alert("操作失败.");
					}
				},
				error:function(){
					alert("网络异常,请刷新页面.");
				}
			});// end of ajax
		}

	})
	
	</script>
  
