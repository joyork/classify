<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="PhoneModel">

    <typeAlias alias="phoneModel" type="com.netease.flowgame.pojo.PhoneModel"/>
    
    <sql id="selectall">
        select id, name, resolution from phone_model
    </sql>
    
    <insert id="insertPhoneModel" parameterClass="phoneModel">
    	insert into phone_model(id,name,resolution)
    	values(#id#,#name#,#resolution#)
    </insert>
    
    <select id="selectList" resultClass="phoneModel" parameterClass="java.util.Map">
        <include refid="selectall"/>
        <dynamic prepend="where">
        	<isNotEmpty property="name" prepend="and">
        		name = #name#
        	</isNotEmpty>
        	<isNotEmpty property="resolution" prepend="and">
        		resolution = #resolution#
        	</isNotEmpty>
        </dynamic>
    </select>

    <select id="select" resultClass="phoneModel" parameterClass="java.lang.Integer">
        <include refid="selectall"/>
        where id = #id#
    </select>

    <select id="selectByName" resultClass="phoneModel" parameterClass="java.lang.String">
        <include refid="selectall"/>
        where name = #name#
    </select>

    <update id="updatePhoneModel" parameterClass="phoneModel">
    	update phone_model set name = #name#, resolution = #resolution#
    	where id = #id#
    </update>

	<delete id="deletePhoneModel" parameterClass="java.lang.Integer">
		delete from phone_model where id = #id#
	</delete>
</sqlMap>