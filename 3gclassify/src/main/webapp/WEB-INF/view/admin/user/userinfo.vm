<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>我的账户</title>
<link href="/admin/styles/style.css" rel="stylesheet" type="text/css" />
<link href="/admin/scripts/jqueryplugin/css/jquery-ui-1.8.10.custom.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="/admin/scripts/jquery-1.4.4.min.js" ></script>
<script type="text/javascript" src="/admin/scripts/jqueryplugin/jquery-ui-1.8.10.custom.min.js" ></script>
<script type="text/javascript" src="/admin/scripts/soft/soft_tool.js"></script>
<script type="text/javascript">

function edituser(userid){
		var url="/admin/user/userEdit?op=editinfo&userid="+userid;
   $("#addFrame").attr("src",url);
   $("#add_dialog").attr("title","编辑个人信息");
   $("#add_dialog").dialog({
		resizable: false, height:300, width:600, modal: true}
	);//end dialog
}

function editpwduser(userid){
		var url="/admin/user/userEdit?op=pwd&userid="+userid;
   $("#addFrame").attr("src",url);
   $("#add_dialog").attr("title","修改密码");
   $("#add_dialog").dialog({
		resizable: false, height:300, width:600, modal: true}
	);//end dialog
}

function closeDialog(t)
{
	$("#add_dialog").dialog("close");
	if(t==1)
	{
		window.location.reload();
	}
}

function showmsg(msg,title,func){
	$("#msg").html(msg);
	$("#msg").attr("title",title);
	$("#msg").dialog({
		resizable: false, height:200, width:380, modal: true,
		buttons: {
			"确定": function() {		
				func();
				$(this).dialog("close");
			},
			"取消": function() {
				$(this).dialog("close");
			
			}
		}
	});//end dialog
}
</script>
</head>

<body>
	<div class="navigation">
		当前位置: 权限管理 > 	
	<a href="/admin/user/userinfo">我的账户</a>
    </div>
	<div  style="text-align:center">
	<table border="0" cellpadding="0" cellspacing="0" style="font-size:12px; text-align:left;" class="my_table_sty" align="center">
		   <tr style="font-weight:bold;">
			<td class="soft_info_title" width="150" style="text-align:center">
				用户ID:
			</td>
			<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
				$escape.html(${userdata.userid})
			</td>	
		   </tr>
		   <tr style="font-weight:bold;">
			<td class="soft_info_title" width="150" style="text-align:center">
				类型:
			</td>
			<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
				#if(${userdata.type}=="1")全职#elseif(${userdata.type}=="2")兼职#end
			</td>	
		   </tr>
		   <tr style="font-weight:bold;">
			##<td class="soft_info_title" width="150" style="text-align:center">
			##	角色:
			##</td>
			##<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
			##	${userdata.level}
			##</td>	
		   </tr>
		   <tr style="font-weight:bold;">
			<td class="soft_info_title" width="150" style="text-align:center">
				状态:
			</td>
			<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
			#if($userdata.status=="disallow") 冻结 #else 正常 #end
			</td>	
		   </tr>
		   <tr style="font-weight:bold;">
			<td class="soft_info_title" width="150" style="text-align:center">
				昵称:
			</td>
			<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
				$escape.html(${userdata.nickname})
			</td>	
		   </tr>
		   <tr style="font-weight:bold;">
			<td class="soft_info_title" width="150" style="text-align:center">
				Email:
			</td>
			<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
				$escape.html(${userdata.email})
			</td>	
		   </tr>
		   <tr style="font-weight:bold;">
			<td class="soft_info_title" width="150" style="text-align:center">
				电话:
			</td>
			<td class="soft_info_title" width="350" style="text-align:center;font-weight: normal;background-color:#FFFFFF">
				$escape.html(${userdata.phone})
			</td>	
		   </tr>
		 
	 </table>
	 <input type="button" id="editBtn" value="修改个人信息" class="in_button"   onclick="edituser('$userdata.userid')"/>&nbsp;#if(${userdata.type}=="2")<input type="button" id="editpwdBtn" value="修改密码" class="in_button"   onclick="editpwduser('$userdata.userid')"/> #end
	</div>
		

<div id="msg" style="display:none" title="提示"></div>
<div id="add_dialog" style="display:none" title="添加系统用户">
<iframe id="addFrame" src="" width="100%" height="100%" scrolling="auto" frameborder="0"></iframe>
</div>
</body>
</html>